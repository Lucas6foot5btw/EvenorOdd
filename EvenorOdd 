<body>
    <h1> Even or Odd Which Is It?</h1>
    <input type="text" id="input">
    <p id="clickme">Click Me</p>
    <p id="results"></p>
    <script>
        document.getElementById("clickme").addEventListener("click",evenoroddchecker)
        function evenoroddchecker() {
            let input=document.getElementById("input").value;
            if(input%2==0){
                document.getElementById("result").innerHTML="The Number is Even"
            }
            else{
                document.getElementById("result").innerHTML="The Number is Odd"
            }
        }
    </script>
</body>
